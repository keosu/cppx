# clang-format configuration for cppx project 

BasedOnStyle: Google

# Language and standard
Language: Cpp
Standard: c++20

# Indentation
IndentWidth: 2
IndentPPDirectives: BeforeHash
TabWidth: 2
UseTab: Never
ContinuationIndentWidth: 4
ConstructorInitializerIndentWidth: 4

# Line length
ColumnLimit: 100

# Control statements
AllowShortCaseLabelsOnASingleLine: true  # 允许短 case 在一行
AllowShortIfStatementsOnASingleLine: WithoutElse  # 允许短 if（无 else）在一行
 
# Comments
ReflowComments: true
CommentPragmas: '^ (TODO|FIXME|NOTE|BUG):'

# Penalties (for line breaking decisions)
PenaltyBreakAssignment: 2
PenaltyBreakBeforeFirstCallParameter: 19
PenaltyBreakComment: 300
PenaltyBreakFirstLessLess: 120
PenaltyBreakString: 1000
PenaltyExcessCharacter: 1000000
PenaltyReturnTypeOnItsOwnLine: 60

